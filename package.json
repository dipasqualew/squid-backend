  "scripts": {
    "build": "tsc",
    "db:exec": "docker exec -it squid_dev_db",
    "db:ssh": "yarn db:exec bash",
    "db:psql": "yarn db:ssh -c 'psql --username $POSTGRES_USER $POSTGRES_DB'",
    "db:start": "docker-compose run --name squid_dev_db --publish 5432:5432 --detach postgres || docker start squid_dev_db",
    "db:stop": "docker container stop squid_dev_db",
    "serve": "nodemon",
    "test": "NODE_ENV=test jest --colors --runInBand",
    "test:e2e": "yarn test --selectProjects E2E",
    "test:unit": "yarn test --selectProjects UNIT"
  }
}
